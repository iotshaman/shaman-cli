{
    "recipe": {
        "projects": [{
                "name": "sample-website",
                "environment": "node",
                "template": "client",
                "path": "client",
                "runtimeDependencies": [
                    "sample-server"
                ]
            },
            {
                "name": "sample-database",
                "environment": "node",
                "template": "database",
                "path": "database"
            },
            {
                "name": "sample-library",
                "environment": "node",
                "template": "library",
                "path": "library",
                "include": [
                    "sample-database"
                ]
            },
            {
                "name": "sample-server",
                "environment": "node",
                "template": "server",
                "path": "server",
                "include": [
                    "sample-database",
                    "sample-library"
                ]
            }
        ],
        "transform": [{
            "targetProject": "sample-server",
            "transformation": "compose:datacontext",
            "sourceProject": "sample-database"
        }]
    }
}